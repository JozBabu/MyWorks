        android:theme="@style/Theme.MyWorks">
        <activity android:name=".ui.CardRotateActivity">

        </activity>
        <activity android:name=".ui.qr_reader.ReadQrActivity" />
        <activity android:name=".ui.spinnerwheel.RotateSpinnerActivity" />
        <activity android:name=".ui.toggle.ToggleActivity" />
        <activity android:name=".ui.bottom_tab.RegistrationActivity" />
        <activity android:name=".ui.bottom_tab.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".MainActivity">

        </activity>
